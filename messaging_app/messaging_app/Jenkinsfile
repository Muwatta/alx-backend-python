pipeline {
    agent any

    environment {
        GITHUB_CREDENTIALS = credentials('github-token') // Replace with your Jenkins GitHub credential ID
    }

    stages {
        stage('Checkout') {
            steps {
                // Pull a specific branch, e.g., main
                git branch: 'main', credentialsId: 'github-token', url: 'https://github.com/your-username/alx-backend-python.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                // Install dependencies from messaging_app/requirements.txt
                sh 'python3 -m venv venv'
                sh '. venv/bin/activate && pip3 install -r messaging_app/requirements.txt'
            }
        }

        stage('Run Tests') {
            steps {
                sh '. venv/bin/activate && pytest --junitxml=report.xml'
            }
            post {
                always {
                    junit 'report.xml'
                }
            }
        }
    }
}
